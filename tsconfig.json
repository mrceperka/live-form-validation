  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declarationDir": "./types",
    "declaration": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
